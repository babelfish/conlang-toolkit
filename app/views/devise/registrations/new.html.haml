.row
  .col-sm-6
    %h2 Sign up

    = form_for resource, :url => registration_path(resource_name) do |f|
      = render "shared/error_messages", :object => f.object

      .form-group
        = f.text_field :name, :placeholder => "Username", :class => "form-control", :autofocus => true, :required => true
      .form-group
        = f.text_field :email, :placeholder => "E-mail", :class => "form-control", :autofocus => true, :required => true
      .form-group
        = f.password_field :password, :placeholder => "Password", :class => "form-control", :autofocus => true, :required => true
      .form-group
        = f.password_field :password_confirmation, :placeholder => "Repeat password", :class => "form-control", :autofocus => true, :required => true
      .form-group
        = f.submit "Sign up", :class => "btn btn-primary"

    = render "devise/shared/links"
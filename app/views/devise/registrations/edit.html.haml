.row
  .col-sm-6
    %h2
      Edit 
      = resource_name.to_s.humanize

    = form_for resource, :url => registration_path(resource_name), :html => { :method => :put } do |f|
      = render 'shared/error_messages', :object => f.object

      .form-group
        = f.text_field :name, placeholder: "Username", :class => "form-control", :autofocus => true, :required => true
      .form-group
        = f.text_field :email, placeholder: "E-mail", :class => "form-control", :autofocus => true, :required => true

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: 
          = resource.unconfirmed_email
       
      .form-group
        = f.label :password, "leave it blank if you don't want to change it"
        = f.password_field :password, :autocomplete => "off", :placeholder => "New password", :required => false
        = f.password_field :password_confirmation, :placeholder => "Confirm new password", :required => false
      .form-group
        = f.password_field :current_password, :placeholder => "Current password", :required => true

      .form-group
        = f.submit "Update", :class => "btn btn-primary"

    %h3 Cancel my account

    %p
      Unhappy?
      = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete

    = link_to "Back", :back